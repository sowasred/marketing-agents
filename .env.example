# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# DATA PROVIDER
# ============================================
# Options: 'csv' or 'sheets'
DATA_PROVIDER=csv

# Google Sheets (only needed if DATA_PROVIDER=sheets)
GOOGLE_SHEETS_ID=
GOOGLE_SERVICE_ACCOUNT_PATH=

# ============================================
# API KEYS (REQUIRED)
# ============================================
# Resend: Get from https://resend.com/api-keys
RESEND_API_KEY=

# OpenAI: Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# YouTube: Get from https://console.cloud.google.com/apis/credentials
# Note: Optional but recommended for research features
YOUTUBE_API_KEY=

# ============================================
# SECURITY CONFIGURATION
# ============================================
# API Key for endpoint authentication
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ‚ö†Ô∏è  If empty, authentication is DISABLED (only for development)
# üí° Tip: Use a strong 64-character random hex string in production
API_KEY=

# Webhook Secret for Resend webhook verification
# Get from Resend dashboard when creating webhook
# ‚ö†Ô∏è  If empty, webhook signature verification is DISABLED
# üí° Tip: Copy "Signing Secret" from Resend webhook settings
WEBHOOK_SECRET=

# Allowed Origins for CORS (comma-separated)
# Examples:
#   * = Allow all origins (development only)
#   https://yourdomain.com = Single domain
#   https://app.yourdomain.com,https://admin.yourdomain.com = Multiple domains
# Default: * (all origins allowed)
ALLOWED_ORIGINS=*

# IP Whitelist (comma-separated)
# Examples:
#   203.0.113.1,203.0.113.2 = Only these IPs
#   (empty) = All IPs allowed
# ‚ö†Ô∏è  If empty, IP whitelisting is DISABLED (all IPs accepted)
# üí° Tip: Get your server IP and whitelist it in production
ALLOWED_IPS=

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# Redis password (optional, leave empty for no password)
# üí° Tip: Required if using managed Redis (Upstash, Redis Cloud, etc.)
REDIS_PASSWORD=

# ============================================
# BOT CONFIGURATION
# ============================================
BOT_NAME=ReplyFanBot

# Number of concurrent email processing jobs
# Default: 5 (increase for higher throughput)
# üí° Tip: Start low (5), increase gradually based on performance
CAMPAIGN_CONCURRENCY=5

# Delay between sending emails (milliseconds)
# Default: 1000ms (1 second)
# üí° Tip: Increase to avoid rate limits (e.g., 2000 for 2 seconds)
EMAIL_SEND_DELAY_MS=1000

# Maximum emails to send per campaign run
# Default: 50
# üí° Tip: Set lower for testing (e.g., 5), higher for production
MAX_EMAILS_PER_RUN=50

# ============================================
# EMAIL CONFIGURATION
# ============================================
# Sender email address (must be verified in Resend)
# Format: email@yourdomain.com
RESEND_FROM_EMAIL=noreply@replyfan.com

# Sender display name
# Example: "ReplyFan Team", "John from ReplyFan"
RESEND_FROM_NAME=ReplyFan

# ============================================
# RATE LIMITING (Built-in, no config needed)
# ============================================
# The following rate limits are automatically applied:
#
# General endpoints:
#   - 100 requests per 15 minutes (per IP)
#
# Campaign trigger:
#   - 10 requests per hour (per IP)
#
# Test email:
#   - 5 requests per 5 minutes (per IP)
#
# To customize, edit src/server.ts

# ============================================
# QUICK SETUP CHECKLIST
# ============================================
# For development:
#   ‚úÖ Set RESEND_API_KEY, OPENAI_API_KEY, YOUTUBE_API_KEY
#   ‚úÖ Leave API_KEY empty (auth disabled)
#   ‚úÖ Use DATA_PROVIDER=csv
#   ‚úÖ ALLOWED_ORIGINS=*
#
# For production:
#   ‚úÖ Generate strong API_KEY (64 chars)
#   ‚úÖ Set WEBHOOK_SECRET from Resend
#   ‚úÖ Set NODE_ENV=production
#   ‚úÖ Configure ALLOWED_ORIGINS (specific domains)
#   ‚úÖ Consider setting ALLOWED_IPS
#   ‚úÖ Use managed Redis with REDIS_PASSWORD
